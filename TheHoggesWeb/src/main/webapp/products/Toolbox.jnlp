<?xml version="1.0" encoding="utf-8"?>
<!-- JNLP File for HogDev Toolbox Application -->
<jnlp
  spec="1.0+"
  codebase="http://www.thehogges.com/TheHoggesWeb/products"
  href="Toolbox.jnlp">
  <information>
    <title>Toolbox</title>
    <vendor>HogDev, Inc.</vendor>
    <homepage href="www.thehogges.com"/>
    <description>HogDev toolbox utilities</description>
    <description kind="short">A set of useful utilities</description>
    <icon href="checkeredflag.gif"/>
