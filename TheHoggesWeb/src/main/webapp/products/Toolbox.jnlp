    <!--icon kind="splash" href="splash.jpg"/-->
    <offline-allowed/>
	<shortcut online="false">
      <desktop/>
    </shortcut>	
  </information>
  <!-- not sure if this is necessary -->
  <security>
      <all-permissions/>
  </security>
  <resources>
    <j2se version="1.4+"/>
    <jar href="sgn-hogdev-toolbox.jar"/>
    <jar href="sgn-hogdev-util.jar"/>
    <jar href="sgn-hogdev-widgets.jar"/>
  </resources>
  <application-desc main-class="com.hogdev.toolbox.ToolBox"/>
</jnlp> 